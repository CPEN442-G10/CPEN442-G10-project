<%- include('../common/head.ejs') %>
    <link rel="stylesheet" href="/css/sql-injection.css">
</head>

<body>
    <%- include('../common/navbar.ejs') %>

    <div class="container">
        <h1>Merchandise</h1>
        <p>Welcome back to the store, <%= userName %>!</p>
        <form action="/sql-injection" method="POST">
            <input type="text" name="search" value="<%= search %>" placeholder="Search merchandise...">
            <button type="submit">Search</button>
        </form>

        <table>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
            <% merchandise.forEach(item => { %>
                <tr>
                    <td><%= item.name %></td>
                    <td><%= item.quantity %></td>
                    <td><%= item.price %></td>
                </tr>
            <% }) %>
        </table>
    </div>

<%- include('../common/end.ejs') %>