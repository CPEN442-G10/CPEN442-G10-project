<%- include('../common/head.ejs') %>
    <link rel="stylesheet" href="/css/sql-injection.css"> 
</head>

<body>
    <%- include('../common/navbar.ejs') %>

    <div class="container">
        <h1>Online Store</h1>
        <p>Welcome back to the store, <%= userName %>!</p>
        <form action="/sql-injection" method="POST">
            <input id="searchBox" type="text" name="search" value="<%= search %>" placeholder="Search merchandise...">
            <button type="submit">Search</button>
        </form>

        <table>
            <tr>
                <th>Merchandise Name</th>
                <th>Merchandise Quantity</th>
                <th>Merchandise Price</th>
            </tr>
            <% merchandise.forEach(item => { %>
                <tr>
                    <td><%= item.name %></td>
                    <td><%= item.quantity %></td>
                    <td><%= item.price %></td>
                </tr>
            <% }) %>
        </table>
    </div>

    <script>
        var progressNum = JSON.parse('<%- JSON.stringify(progress) %>');
    </script>
    <script src="/js/sql-injection/index.js"></script>
<%- include('../common/end.ejs') %>